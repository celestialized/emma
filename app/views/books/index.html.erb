<% billboard_image_filename = "books_hero.jpg" %>
<% headline = "Favorite Books" %>
<%= render partial: '/shared/static_billboard', 
    locals: { image_filename: billboard_image_filename,
              headline:       headline
    
    } %>


<div class="row">
  <div class="col-sm-6">
    <h1>Books</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_book_path, class: 'btn btn-primary' do %>
    Add New Book
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Byline</th>
            <th>Description</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <%= content_tag :tr, id: dom_id(book), class: dom_class(book) do %>
          

                      <td><%= book.title %></td>
                      <td><%= book.byline %></td>
                      <td><%= book.description %></td>
          
          
            <td><%= link_to 'Show', book %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="page-header">
  <%= link_to broadcaster_themes_path, class: 'btn btn-default' do %>
    All Broadcaster_themes
  <% end %>
  <%= link_to edit_broadcaster_theme_path(@broadcaster_theme), class: 'btn btn-primary' do %>
    Edit
  <% end %>
